<h1>Manage your employees</h1>
<a class="btn btn-lg btn-primary" href="~/Identity/Account/Register">Add new employee</a>
<table class="table">
    
    <thead>
        <tr>
            <th>User ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Username</th>
            <th>Hourly Pay($)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.UserName</td>
                <td>@user.HourlyPay</td>
                <td>
                
                    <form asp-controller="Admin" asp-action="RemoveUser" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

